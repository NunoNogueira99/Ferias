<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- home top cover -->
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        android:src="@drawable/home_cover"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <ImageView
        android:background="@drawable/home_cover_mask"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        />

    <!-- home top menu -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingVertical="16dp"
        android:paddingHorizontal="32dp"
        android:backgroundTint="@color/accent_color"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/home_top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/profile_pic_example"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            />

        <Button
            android:textAllCaps="false"
            android:background="@drawable/rounded_rectangle_for_buttons"
            android:id="@+id/home_mybookings_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Bookings"
            android:drawableLeft="@drawable/ic_mybookings"
            />

        <ImageButton
            android:id="@+id/home_favorites_btn"
            android:src="@drawable/ic_favorites"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_mybookings_btn"
            android:layout_marginRight="8dp"
            android:padding="15dp"
            android:background="@drawable/rounded_rectangle_for_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- home main group -->
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/home_top_menu"
        android:paddingVertical="32dp"
        android:paddingHorizontal="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="?attr/textAppearanceSubtitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi Martin,"
                />

            <TextView
                style="?attr/textAppearanceHeadline4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where you want to go?"
                />

            <EditText
                android:id="@+id/edittext_location_choosen"
                android:textColor="@color/primary_white"
                android:background="@drawable/shape_search_for_edittext"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:hint="search..."
                android:textColorHint="@color/tertiary_white"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>