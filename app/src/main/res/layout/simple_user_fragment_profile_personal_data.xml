<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.simple_user.profile.PersonalData">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="@string/Name"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/tv_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="Age"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="date"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />

            <TextView
                android:id="@+id/tv_Years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/archivo_medium"
                android:text="00 years"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

            <TextView
                android:id="@+id/tv_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="@string/phone"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/tv_Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="@string/Email"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/tv_Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="Country/Region"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <TextView
                android:id="@+id/tv_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="Address"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

            <TextView
                android:id="@+id/tv_City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="Town / City"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout16">

            <TextView
                android:id="@+id/tv_Zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_medium"
                android:text="Zip code"
                android:textAllCaps="false"
                android:textColor="#E1FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_Zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/rounded_corner_view"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:shadowColor="#00FFFFFF"
                android:soundEffectsEnabled="false"
                android:textColorHighlight="#31FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_save_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_for_buttons"
            android:text="@string/save"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>